# =============================================================================
# Learning RAG Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=Learning RAG API
APP_VERSION=1.0.0
PYTHONUNBUFFERED=1

# -----------------------------------------------------------------------------
# Service URLs (Docker Internal)
# -----------------------------------------------------------------------------
OLLAMA_URL=http://ollama:11434
QDRANT_URL=http://vector-db:6333

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Embedding model for document vectorization
EMBEDDING_MODEL=nomic-embed-text

# LLM model for chat responses
LLM_MODEL=qwen2.5:0.5b

# -----------------------------------------------------------------------------
# Qdrant Settings
# -----------------------------------------------------------------------------
# Default collection name for storing documents
COLLECTION_NAME=learning_materials

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# CORS allowed origins (comma-separated for multiple origins)
# Use "*" for development, specific domains for production
CORS_ORIGINS=*

# API port (internal)
API_PORT=8000

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# API URL for frontend (external access)
# Change this if accessing from different host/port
FRONTEND_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Port Mappings (External Access)
# -----------------------------------------------------------------------------
# Web UI port
WEB_PORT=80

# API port (external)
API_EXTERNAL_PORT=8000

# Qdrant REST API port
QDRANT_REST_PORT=6333

# Qdrant gRPC port
QDRANT_GRPC_PORT=6334

# Ollama API port
OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# Ollama Model Downloads
# -----------------------------------------------------------------------------
# Models to pull on startup (space-separated)
OLLAMA_MODELS=qwen2.5:0.5b nomic-embed-text

# Sleep time before pulling models (seconds)
OLLAMA_STARTUP_DELAY=5
